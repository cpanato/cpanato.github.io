doctype html
html(lang='en')

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='')
        meta(name='author', content='cpanato')

        title Carlos Panato

        link(rel='icon', type='image/x-icon', href='assets/img/favicon.ico')

        // Font Awesome icons (free version)
        script(src='https://use.fontawesome.com/releases/v7.1.0/js/all.js', crossorigin='anonymous')

        // Devicon icons
        link(rel='stylesheet', type='text/css', href='https://cdn.jsdelivr.net/npm/devicon@latest/devicon.min.css')

        // Google fonts
        link(href='https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700', rel='stylesheet', type='text/css')
        link(href='https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i', rel='stylesheet', type='text/css')

        // Core theme CSS (includes Bootstrap)
        link(href='css/styles.css', rel='stylesheet')

    body#page-top

        // Navigation
        nav#sideNav.navbar.navbar-expand-lg.navbar-dark.bg-primary.fixed-top
            a.navbar-brand.js-scroll-trigger(href='#page-top')
                span.d-block.d-lg-none Carlos Panato
                span.d-none.d-lg-block
                    img.img-fluid.img-profile.rounded-circle.mx-auto.mb-2(src='assets/img/profile.png', alt='...')
            button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarResponsive.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='#about') About
                    li.nav-item
                        a.nav-link.js-scroll-trigger(href='#skills') Skills
                    //- li.nav-item
                    //-     a.nav-link.js-scroll-trigger(href='#interests') Interests
                    //- li.nav-item
                    //-     a.nav-link.js-scroll-trigger(href='#certifications') Certifications

        // Page Content
        .container-fluid.p-0

            // About
            section#about.resume-section
                .resume-section-content
                    h1.mb-0
                        | Carlos
                        span.text-primary Panato
                    .subheading.mb-5
                        | Software Engineer/SRE/Infra/Test
                    p.lead.mb-5
                        | Software Engineer / SRE with experience both on-prem and public cloud. Development, Infrastructure, CI/CD and any automation is what I like.
                    p.lead.mb-5
                        | Open Source Contributor. Tech Lead for Kubernetes Release Team (Sig-Release).
                    .social-icons
                        a.social-icon(href='https://www.linkedin.com/in/cpanato/', target='_blank')
                            i.fab.fa-linkedin-in
                        a.social-icon(href='https://github.com/cpanato', target='_blank')
                            i.fab.fa-github
                        a.social-icon(href='https://gitlab.com/cpanato', target='_blank')
                            i.fab.fa-gitlab
                        a.social-icon(href='https://bsky.app/profile/cpanato.dev', target='_blank')
                            i.fab.fa-bluesky

            hr.m-0

            // Skills
            section#skills.resume-section
                .resume-section-content
                    h2.mb-5 Skills
                    .subheading.mb-3 Programming Languages & Tools
                    ul.list-inline.dev-icons
                        li.list-inline-item
                            i.fab.fa-golang
                        li.list-inline-item
                            i.fab.fa-git
                        li.list-inline-item
                            i.fab.fa-linux
                        li.list-inline-item
                            i.devicon-bash-plain


                    .subheading.mb-3 Containers & Cloud
                    ul.list-inline.dev-icons
                        li.list-inline-item
                            i.devicon-amazonwebservices-plain
                        li.list-inline-item
                            i.devicon-azure-plain
                        li.list-inline-item
                            i.devicon-googlecloud-plain
                        li.list-inline-item
                            i.devicon-kubernetes-plain
                        li.list-inline-item
                            i.devicon-docker-plain

            hr.m-0

            // Interests
            section#interests.resume-section
                .resume-section-content
                    h2.mb-5 Interests
                    p
                        | TBA.
                    p.mb-0
                        | TBA.

            hr.m-0

            // Certifications
            section#certifications.resume-section
                .resume-section-content
                    h2.mb-5 Certifications
                    ul.fa-ul.mb-0
                        li
                            span.fa-li
                                i.fas.fa-trophy.text-warning
                            | Google Analytics Certified Developer
                        li
                            span.fa-li
                                i.fas.fa-trophy.text-warning
                            | Mobile Web Specialist - Google Certification
                        li

        // Bootstrap core JS
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js')

        // Core theme JS
        script(src='js/scripts.js')